CREATE TABLE FOO (col1 INT,
                  col2 LONG,
                  col3 DOUBLE,
                  col4 FLOAT,
                  col5 CHAR(5));
SELECT * FROM FOO;
--
+-----------+--------------------+------------------------+---------------+-----+
|col1       |col2                |col3                    |col4           |col5 |
+-----------+--------------------+------------------------+---------------+-----+
+-----------+--------------------+------------------------+---------------+-----+
==
CREATE TABLE foo1 (col1 INT, col2 CHAR(5)) WITH BLOCKPROPERTIES
(TYPE columnstore, SORT col1);
SELECT * FROM foo1;
--
+-----------+-----+
|col1       |col2 |
+-----------+-----+
+-----------+-----+
==
