# Use generate_series: aggregation
SELECT count(*) FROM generate_series(1, 1000);
--
+--------------------+
|count(*)            |
+--------------------+
|                1000|
+--------------------+
==

SELECT sum(i) FROM generate_series(1, 1000) AS gs(i);
--
+--------------------+
|sum(i)              |
+--------------------+
|              500500|
+--------------------+
==

SELECT avg(i) FROM generate_series(1, 1000) AS gs(i);
